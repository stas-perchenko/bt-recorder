<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >


    <data>
        <import type="android.view.View" alias="v"/>
        <import type="android.view.Gravity" alias="Grav"/>
        <import type="com.alperez.bt_microphone.core.DeviceState" alias="DS"/>

        <variable
            name="viewModel"
            type="com.alperez.bt_microphone.ui.viewmodel.MainControlsViewModel"/>


        <variable
            name="clickerRecord"
            type="android.view.View.OnClickListener"/>
        <variable
            name="clickerStop"
            type="android.view.View.OnClickListener"/>
        <variable
            name="clickerPlayPause"
            type="android.view.View.OnClickListener"/>
        <variable
            name="clickerGainUp"
            type="android.view.View.OnClickListener"/>
        <variable
            name="clickerGainDown"
            type="android.view.View.OnClickListener"/>
        <variable
            name="clickerPrevTrack"
            type="android.view.View.OnClickListener"/>
        <variable
            name="clickerNextTrack"
            type="android.view.View.OnClickListener"/>
        <variable
            name="clickerSmprate1"
            type="android.view.View.OnClickListener"/>
        <variable
            name="clickerSmprate2"
            type="android.view.View.OnClickListener"/>
        <variable
            name="clickerSmprate3"
            type="android.view.View.OnClickListener"/>
        <variable
            name="clickerPhantom"
            type="android.view.View.OnClickListener"/>


    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/control_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 0 -->
            <LinearLayout android:id="@+id/row_0_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_weight="0"
                android:orientation="horizontal">

                <!-- Row: 0, Column: 0, 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:background="#C0C0C0">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small.Inverse"
                        android:indeterminate="true"
                        android:visibility="@{viewModel.commandInProgress ? v.VISIBLE : v.GONE}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:textSize="14sp"
                        android:textColor="#909090"
                        android:text="State:"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="@{viewModel.devState.getUiTextValue}"/>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="32dp"
                        android:textSize="14sp"
                        android:textColor="#909090"
                        android:text="Gain:"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="@{viewModel.gainLevel}"/>

                </LinearLayout>

                <!-- Row: 0, Column: 2 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp" >

                    <com.alperez.bt_microphone.ui.widget.LockableToggleButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:theme="@style/ThemeButton.TogglableRed"
                        style="@style/ButtonLockable.Togglable"

                        android:textOff="@string/action_record"
                        android:textOn="@string/action_record_active"

                        android:checked="@{viewModel.devState == DS.RECORDING}"


                        android:enabled="@{!(viewModel.devState == DS.PLAYING)  &amp;&amp;  !(viewModel.devState == DS.PAUSED)}"
                        app:locked="@{viewModel.controlsLocked}"
                        app:onClickListener="@{clickerRecord}"/>

                </FrameLayout>

            </LinearLayout>

            <!--===================================== Row 1 =========================================-->
            <LinearLayout android:id="@+id/row_1_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_weight="0"
                android:orientation="horizontal">

                <!-- Row: 1, Column: 0 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <com.alperez.bt_microphone.ui.widget.LockableButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:theme="@style/ThemeButton.RegularGray"
                        style="@style/ButtonLockable.Regular"
                        android:text="@string/action_stop"
                        app:locked="@{viewModel.controlsLocked}"
                        app:onClickListener="@{clickerStop}"/>

                </FrameLayout>

                <!-- Row: 1, Column: 1 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <com.alperez.bt_microphone.ui.widget.LockableToggleButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:theme="@style/ThemeButton.TogglableGreen"
                        style="@style/ButtonLockable.Togglable"
                        android:textOff="@string/action_play"
                        android:textOn="@string/action_pause"
                        android:checked="@{viewModel.devState == DS.PLAYING}"
                        android:enabled="@{!(viewModel.devState == DS.RECORDING)}"
                        app:locked="@{viewModel.controlsLocked}"
                        app:onClickListener="@{clickerPlayPause}"/>

                </FrameLayout>

                <!-- Row: 1, Column: 2 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <ToggleButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:theme="@style/ThemeButton.TogglableOrange"
                        style="@style/ButtonLockable.Togglable"
                        android:textOff="@string/action_lock"
                        android:textOn="@string/action_unlock"
                        android:checked="@={viewModel.controlsLocked}"/>

                </FrameLayout>

            </LinearLayout>

            <!--===================================== Row 2 =========================================-->
            <LinearLayout android:id="@+id/row_2_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_weight="0"
                android:orientation="horizontal">

                <!-- Row: 2, Column: 0 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <com.alperez.bt_microphone.ui.widget.LockableButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:theme="@style/ThemeButton.RegularGray"
                        style="@style/ButtonLockable.Regular"
                        android:text="@string/action_rev"
                        android:enabled="@{viewModel.devState == DS.PLAYING}"
                        app:locked="@{viewModel.controlsLocked}" />

                </FrameLayout>

                <!-- Row: 2, Column: 1 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <com.alperez.bt_microphone.ui.widget.LockableButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:theme="@style/ThemeButton.RegularGray"
                        style="@style/ButtonLockable.Regular"
                        android:text="@string/action_fvd"
                        android:enabled="@{viewModel.devState == DS.PLAYING}"
                        app:locked="@{viewModel.controlsLocked}" />

                </FrameLayout>

                <!-- Row: 2, Column: 2 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <com.alperez.bt_microphone.ui.widget.LockableButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:theme="@style/ThemeButton.RegularGray"
                        style="@style/ButtonLockable.Regular"
                        android:text="@string/action_gain_up"
                        app:locked="@{viewModel.controlsLocked}"
                        app:onClickListener="@{clickerGainUp}"/>

                </FrameLayout>

            </LinearLayout>

            <!--===================================== Row 3 =========================================-->
            <LinearLayout android:id="@+id/row_3_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_weight="0"
                android:orientation="horizontal">

                <!-- Row: 3, Column: 0 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <com.alperez.bt_microphone.ui.widget.LockableButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:theme="@style/ThemeButton.RegularGray"
                        style="@style/ButtonLockable.Regular"
                        android:text="@string/action_prev_index"
                        android:enabled="@{viewModel.devState == DS.STOPPED}"
                        app:locked="@{viewModel.controlsLocked}"
                        app:onClickListener="@{clickerPrevTrack}"/>

                </FrameLayout>

                <!-- Row: 3, Column: 1 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <com.alperez.bt_microphone.ui.widget.LockableButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:theme="@style/ThemeButton.RegularGray"
                        style="@style/ButtonLockable.Regular"
                        android:text="@string/action_next_index"
                        android:enabled="@{viewModel.devState == DS.STOPPED}"
                        app:locked="@{viewModel.controlsLocked}"
                        app:onClickListener="@{clickerNextTrack}"/>

                </FrameLayout>

                <!-- Row: 3, Column: 2 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <com.alperez.bt_microphone.ui.widget.LockableButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:theme="@style/ThemeButton.RegularGray"
                        style="@style/ButtonLockable.Regular"
                        android:text="@string/action_gain_down"
                        app:locked="@{viewModel.controlsLocked}"
                        app:onClickListener="@{clickerGainDown}"/>

                </FrameLayout>

            </LinearLayout>


            <TextView android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_horizontal"
                android:text="@{(viewModel.devState==DS.PLAYING || viewModel.devState==DS.PAUSING || viewModel.devState==DS.PAUSED) ? @string/section_title_playback_progress : @string/section_title_rec_options}"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/section_title_text_color"
                android:background="@color/section_title_bg_color"/>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--===================================== Row 4 =========================================-->
                    <LinearLayout android:id="@+id/row_4_container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:layout_weight="0"
                        android:orientation="horizontal" >

                        <!-- Row: 4, Column: 0 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp">

                            <com.alperez.bt_microphone.ui.widget.LockableToggleButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:theme="@style/ThemeButton.TogglableGreen"
                                style="@style/ButtonLockable.Togglable"
                                android:textOn="@string/action_quality_24_48"
                                android:textOff="@string/action_quality_24_48"
                                android:checked="@{viewModel.recordingSampleRate == com.alperez.bt_microphone.GlobalConstants.SAMPLE_RATE_48K}"
                                app:locked="@{viewModel.optionsLocked || (viewModel.devState == DS.RECORDING)}"
                                app:onClickListener="@{clickerSmprate1}" />

                        </FrameLayout>

                        <!-- Row: 4, Column: 1 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp">

                            <com.alperez.bt_microphone.ui.widget.LockableToggleButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:theme="@style/ThemeButton.TogglableGreen"
                                style="@style/ButtonLockable.Togglable"
                                android:textOn="@string/action_quality_24_96"
                                android:textOff="@string/action_quality_24_96"
                                android:checked="@{viewModel.recordingSampleRate == com.alperez.bt_microphone.GlobalConstants.SAMPLE_RATE_96K}"
                                app:locked="@{viewModel.optionsLocked || (viewModel.devState == DS.RECORDING)}"
                                app:onClickListener="@{clickerSmprate2}" />

                        </FrameLayout>

                        <!-- Row: 4, Column: 2 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp">

                            <com.alperez.bt_microphone.ui.widget.LockableToggleButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:theme="@style/ThemeButton.TogglableGreen"
                                style="@style/ButtonLockable.Togglable"
                                android:textOn="@string/action_quality_24_192"
                                android:textOff="@string/action_quality_24_192"
                                android:checked="@{viewModel.recordingSampleRate == com.alperez.bt_microphone.GlobalConstants.SAMPLE_RATE_192K}"
                                app:locked="@{viewModel.optionsLocked || (viewModel.devState == DS.RECORDING)}"
                                app:onClickListener="@{clickerSmprate3}" />

                        </FrameLayout>

                        <!-- Row: 4, Column: 3 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp">

                            <ToggleButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:theme="@style/ThemeButton.TogglableOrange"
                                style="@style/ButtonLockable.Togglable"
                                android:textOn="@string/action_unlock"
                                android:textOff="@string/action_lock"
                                android:checked="@={viewModel.optionsLocked}"/>

                        </FrameLayout>

                    </LinearLayout>

                    <!--===================================== Row 5 =========================================-->
                    <LinearLayout android:id="@+id/row_5_container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <!-- Row: 5, Column: 0 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                app:date_only="@{viewModel.currentTimeStart}"/>

                        </FrameLayout>

                        <!-- Row: 5, Column: 1 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                app:time_only="@{viewModel.currentTimeStart}" />

                        </FrameLayout>

                        <!-- Row: 5, Column: 2 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:text="@{viewModel.currentLocation}"/>

                        </FrameLayout>

                        <!-- Row: 5, Column: 3 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp">

                            <com.alperez.bt_microphone.ui.widget.LockableToggleButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:theme="@style/ThemeButton.TogglableGreen"
                                style="@style/ButtonLockable.Togglable"
                                android:textOff="@string/action_pahntom_on"
                                android:textOn="@string/action_pahntom_off"
                                android:checked="@{viewModel.phantomPower}"
                                app:locked="@{viewModel.optionsLocked}"
                                app:onClickListener="@{clickerPhantom}"/>

                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:paddingTop="6dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:visibility="@{(viewModel.devState==DS.PLAYING || viewModel.devState==DS.PAUSING || viewModel.devState==DS.PAUSED) ? v.VISIBLE : v.INVISIBLE}">

                    <TextView android:id="@+id/start_point_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:text="Started at: "/>
                    <TextView android:id="@+id/start_point_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/start_point_title"
                        android:layout_alignBaseline="@id/start_point_title"
                        android:layout_marginLeft="8dp"
                        app:recording_start="@{viewModel.currentTimeStart}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/start_point_value"
                        android:layout_alignBaseline="@id/start_point_title"
                        android:layout_marginLeft="8dp"
                        android:textColor="#909090"
                        android:textSize="10dp"
                        android:text="Location and SMP rate will be here"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/start_point_title"
                        android:gravity="center_vertical">
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_weight="1"
                            android:indeterminate="false"
                            android:max="@{viewModel.currentDuration}"
                            android:progress="@{viewModel.currentPosition}"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:layout_marginLeft="8dp"
                            app:duration_time="@{viewModel.currentDuration}"/>
                    </LinearLayout>

                </RelativeLayout>




            </FrameLayout>




            <!--===================================== Row 6 =========================================-->
            <LinearLayout android:id="@+id/row_6_container"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/colorPrimary">

                <!-- Row: 5, Column: 0 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="15sp"
                            android:textColor="#FFFFFF"
                            android:text="Battery level:"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:text="@{viewModel.batteryLevel}"/>

                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/colorPrimaryDark"/>

                <!-- Row: 5, Column: 1 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="15sp"
                            android:textColor="#FFFFFF"
                            android:text="Memory space (bytes):"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:text="@{viewModel.memorySpace}"/>

                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/colorPrimaryDark"/>

                <ImageView android:id="@+id/action_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:padding="6dp"
                    android:src="@drawable/ic_settings_24px"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

            </LinearLayout>

        </LinearLayout>


        <!--==========================  In progress Cover for locking  ==========================-->
